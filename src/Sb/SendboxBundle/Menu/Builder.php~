<?php

namespace Sb\SendBoxBundle\Menu;

use Knp\Menu\FactoryInterface;
use Symfony\Component\DependencyInjection\ContainerAware;

class Builder extends ContainerAware
{
    public function mainMenu(FactoryInterface $factory)
    {
        $menu = $factory->createItem('root');
        $menu->setCurrentUri($this->container->get('request')->getRequestUri());
        $menu->setAttribute('class', 'items');
        $menu->addChild('Explorer', array('route' => 'search'));
       
        if($this->container->get('security.context')->isGranted('IS_AUTHENTICATED_REMEMBERED')) {
          $menu->addChild('Mes annonces', array(
              'route' => 'my_profil'
          ));
        }
        $menu->addChild('Canaux', array('route' => 'channel'));
        $menu->addChild('Aide', array('route' => 'publish'));
        $menu->addChild('DÃ©poser une annonce', array('route' => 'publish'));
        return $menu;
    }
}
